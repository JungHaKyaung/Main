import random

def throw_yut():
    yut_results = ['도', '개', '걸', '윷', '모']
    result = random.choice(yut_results)
    return result

def play_yut():
    while True:
        print("윷을 던집니다...")
        result = throw_yut()
        print("나온 결과:", result)
        
        if result == '윷' or result == '모':
            print("한 번 더 던집니다!")
            continue
        
        break
#이런 식으로 짜봤습니다 코판멩형님 피드백 해주세용